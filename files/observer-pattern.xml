<pattern name="Observer Pattern">
	<entity id="e1" name="Observer" type="Abstraction" />
	<entity id="e2" name="Concrete Observer" type="Specialization" />
	<entity id="e3" name="Subject" type="Any" hasDependency="Typed,Use" />

	<rule rule-type="Dependency"  source="e2" value="Specialize" target="e1" />
	<rule rule-type="Dependency"  source="e3" value="Typed" target="e1" />
	<rule rule-type="Dependency"  source="e3" value="Use" target="e1" />
	<rule rule-type="Cardinality"  source="e2" value="Plural" />

	<rule rule-type="AST_Analyze" source="e3" value="Aggregates" target="e1" />
	<rule rule-type="AST_Analyze" source="e3" value="Loops" target="e1" />

	<resolver resolver-type="SEPARATE" source="e1" />
</pattern>