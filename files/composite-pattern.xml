<pattern name="Observer Pattern">
	<entity id="e1" name="Component" type="Abstraction" />
	<entity id="e2" name="Composite" type="Specialization" />
	<entity id="e3" name="Leaf" type="Class" />

	<rule rule-type="Dependency"  source="e2" value="Extend,Implement" target="e1" />
	<rule rule-type="Dependency"  source="e2" value="Typed" target="e1" />
	<rule rule-type="Dependency"  source="e2" value="Use" target="e1" />
	<rule rule-type="Dependency"  source="e3" value="Extend" target="e1" />
	<rule rule-type="Dependency"  exclude="true" source="e3" value="Typed" target="e1" />
	<rule rule-type="Dependency"  exclude="true" source="e3" value="Use" target="e1" />

	<resolver resolver-type="SEPARATE" source="e1" />
</pattern>